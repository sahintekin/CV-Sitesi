@using MvCv.Models.Entity
@model List<Hakkında>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkında Düzenleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>İsim</label>
        <input type="text" name="Ad" value="@item.Ad" class="form-control" />
        <br />
        <label>Soyisim</label>
        <input type="text" name="Soyad" value="@item.Soyad" class="form-control" />
        <br />
        <label>Adres</label>
        <input type="text" name="Adres" value="@item.Adres" class="form-control" />
        <br />
        <label>Telefon</label>
        <input type="text" name="Telefon" value="@item.Telefon" class="form-control" />
        <br />
        <label>Mail Adresi</label>
        <input type="text" name="Mail" value="@item.Mail" class="form-control" />
        <br />
        <label>Resim</label>
        <input type="text" name="Resim" value="@item.Resim" class="form-control" />
        <label>Açıklama</label>
        <textarea rows="10" class="form-control" name="Aciklama">@item.Aciklama</textarea>
    }
    <br />

    <button class="btn btn-success">Güncelle</button>
</form>

